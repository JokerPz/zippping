<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">       
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/post.css">
    <link rel="shortcut icon" type="image/x-icon" href="/images/logo.png"> 
    <title>Zippping</title>
</head>
<body class="login-main"  onload="time(document.getElementById('btn'));">
    <div class="login-title">
        <a href="/" class="login-title_word">首页</a>
        &nbsp;<a class="login-title_word">|</a>&nbsp;
        <a href="/users/agreement" target="blank" class="login-title_word">帮助</a>
    </div>


    <div class="register-top">
        
       <div class="register-icon">
         <img src="../images/Bzippper_L.png" width="100%" height="100%">
       </div>

        <div  class="register-word">

        <form method="get" action="/users/register">
            <label for="acc">手机号</label>
            <input type="text" name="email" id="acc" class="register-phone" required pattern="^\d{11}$" oninvalid="setCustomValidity('请输入正确的手机号')" oninput="setCustomValidity('')">
            <!-- <a href="/users/register?email=15889740706">aaaaaaaa</a> -->
            <input type="submit" id="" value="获取验证码"  class="get-code">
            <!-- <input type="submit" id="btn" value="获取验证码"  class="get-code"> -->
        </form>

        <form  method="post" action="/users/register">
        <label for="cd">验证码</label>
        <input type="text" name="code" id="cd" class="register-code" required >
        <br/>            
        <label for="niname">昵称</label>
        <input type="text" name="nicheng" id="niname" class="register-name" required autofocus pattern="^{1,8}$" oninvalid="setCustomValidity('少于8个字符')" oninput="setCustomValidity('')">
        <br/>
        <label for="pwd">密码</label>
        <input type="password" name="pwd" id="pwd" class="register-box" required placeholder="不少于6个字符" pattern="^.{6,18}$" oninvalid="setCustomValidity('请输入6~18个字符')" oninput="setCustomValidity('')">
        <br/>
        <label for="pwd">再次输入</label>
        <input type="password" name="repasswd" id="repwd" class="register-re_box" required placeholder="不少于6个字符" pattern="^.{6,}$"  onblur="if (this.value!=this.form.pwd.value) { alert('两次输入的密码不一致！')}">
        <br/> 
        <hr class="register-hr" style="width: 275px;margin-bottom:10px;">
        <input type="checkbox" id="cbox" class="check-box" style="margin-left: 51px;" name="agree" value="1">
        <label for="cbox">已同意</label>
        <a href="/users/agreement" target="blank" class="register-rule">《Zippping用户协议》</a>
        <br/>
        <input type="hidden" name="subflag" value="1"/>
        <input type="hidden" name="email" value="1"/>
        <input type="submit" name="loginfo" value="注册" class="register-submit">
        <a href="/users/login" class="register-tip">已注册账号？</a>
        </form>          
        
        </div>

    </div>
        <!-- // document.getElementById("btn").onclick=function(){time(this);}   -->
<!-- <script src="http://lib.sinaapp.com/js/jquery/3.1.0/jquery-3.1.0.slim.min.js"></script> -->
<script src="../javascripts/no.js"></script>
</body>
</html>