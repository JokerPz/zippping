<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="baidu-site-verification" content="WakpMKlyUl" />
    <title>Zippping</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
	<link rel="stylesheet" type="text/css" href="\stylesheets\nav.css">
	<link rel="stylesheet" type="text/css" href="\stylesheets\detail.css">
    <link rel="shortcut icon" type="image/x-icon" href="/images/logo.png"> 
    <body style="margin: 0;padding: 0;background-color: #F2F2F2">
        <% if(loginbean==undefined){ %> 
        <div class="top1">
            <div style="width: 1000px;height: 70px;margin: 0 auto;">
                <img src="/images/logo_S.gif" style="
                width: 195px;
                height: 50px;
                padding-top: 10px;
                padding-left: 30px">
        
                
                <div class="inside" style="margin-right: 20px;border:none;color: #434343">
                    <a href="./users/login" style="color: #434343">登录</a> / 
                    <a href="./users/register" style="color: #434343">注册</a>
                </div>
                <div class="inside">
                    <a href="/employment/emy">我要发帖</a>
                </div>
        
                <div class="inside">
                    <a href="#">我的收藏</a>
                </div>
            </div>
        </div>
        <% }else{ %> 
        <div class="top1">
            <div style="width: 1000px;height: 70px;margin: 0 auto;">
                <img src="/images/logo_S.gif" style="
                width: 195px;
                height: 50px;
                padding-top: 10px;
                padding-left: 30px">
        
                <div class="inside3" style="margin-right: 20px;border:none;color: #434343">
                    <a href="/logout">退出</a>
                </div>
        
                <div class="inside3"><a href="/employment/emy">发帖</a></div>
                <div class="inside3"><a href="/employment/eplist">已发</a></div>
                <div class="inside3"><a href="/employment/collection/list">收藏</a></div>
                <div class="inside3"><a href="/administrator/data">数据</a></div>
                <div class="inside3"><a href="#">管理</a></div>
                <div class="inside3"><a href="/administrator/examine/wait">审核</a></div>
                <div class="inside3"><a href="#" style="color: #6c2393;"><%=loginbean.nicheng%></a></div>
            </div>
        </div>
        <% } %>
        <div class="top2">
            <div style="width: 1000px;height: 24px;margin: 0 auto;">
                <ul>
                    <li style="padding-left: 176px"><a href="/">首页</a></li>
                    <li><a href="/administrator/examine/wait?business=IT互联网">IT互联网</a></li>
                    <li><a href="/administrator/examine/wait?business=金融">金融</a></li>
                    <li><a href="/administrator/examine/wait?business=广告">广告</a></li>
                    <li><a href="/administrator/examine/wait?business=房地产">房地产</a></li>
                    <li><a href="/administrator/examine/wait?business=消费品">消费品</a></li>
                    <li><a href="/administrator/examine/wait?business=制造业">制造业</a></li>
                    <li><a href="/administrator/examine/wait?business=其他">其他</a></li>
                    <li style="float: right;margin-right: 20px"><a href="#">帮助</a></li>
                </ul>
            </div>
        </div>

<div style="background-color: #fff;width: 1000px;height: 620px;margin: 0 auto;">

	<table style="padding-left: 50px;padding-top: 18px;">
		<tr>
			<td class="title">招聘主题</td>
			<td class="text1"><%= rs[0].title%></td>
			<td class="title">所处行业</td>
			<td class="text2"><%= rs[0].business%></td>
			<td class="title">帖子状态</td>
			<td class="text3">等待审核</td>
		</tr>

		<tr>
			<td class="title">活动地点</td>
			<td class="text1"><%= rs[0].place%></td>
			<td class="title">活动时间</td>
			<td class="text2"><%= rs[0].year%>/<%= rs[0].month%>/<%= rs[0].day%>  <%= rs[0].hour%>:<%= rs[0].minute%></td>
			<td class="title">发帖人 </td>
			<td class="text3"><%=rs[0].nicheng%></td>
		</tr>

		<tr>
			<td class="title">活动类型</td>
			<td class="text1"><%= rs[0].type%></td>
			<td class="title">发帖时间</td>
			<td class="text3"><%= time%></td>
		</tr>
	</table>

	<hr style="width: 900px;padding: 0 auto;background-color: #AEAEAE;height: 1px;border: none;">

	<table style="padding-left: 50px;">
		<tr>
			<td class="title" valign="top">活动内容</td>
			<td>
			<textarea readonly><%- rs[0].content%></textarea>
			</td>
		</tr>
	</table>

	<hr style="width: 900px;padding: 0 auto;background-color: #AEAEAE;height: 1px;border: none;">
	
	<table style="padding-left: 50px;">
		<tr>
			<td class="title">联系方式</td>
			<td class="name">名称：<%= rs[0].name%></td>
			<td class="contact">电话：<%= rs[0].phone%></td>
			<td class="contact">邮箱：<%= rs[0].email%></td>
		</tr>

		<tr>
			<td class="title"></td>
			<td class="name">微信：<%= rs[0].wechat%></td>
			<td class="contact">QQ：<%= rs[0].QQ%></td>
        </tr>
        <% if(rs[0].status==0){ %>
        <!-- wait page -->
        <form method="post" action="/administrator/examine/wait/result?tid=<%=rs[0].tid %>">
            <input type="hidden" name="status" value="3"/>
            <input type="submit" value="删除" class="exam-gray">
        </form>
        <form method="post" action="/administrator/examine/wait/result?tid=<%=rs[0].tid %>">
            <input type="hidden" name="status" value="-1"/>
            <input type="submit" value="失败" class="exam-green">
        </form> 
        <form method="post" action="/administrator/examine/wait/result?tid=<%=rs[0].tid %>">  
            <input type="hidden" name="status" value="1"/>
            <input type="submit" value="通过" class="exam-purple">
        </form> 
        <%}else if(rs[0].status==-1){%>
        <!-- fail page -->
        <form method="post" action="/administrator/examine/fail/result?tid=<%=rs[0].tid %>">
            <input type="hidden" name="status" value="3"/>
            <input type="submit" value="删除" class="exam-gray">
        </form> 
        <form method="post" action="/administrator/examine/fail/result?tid=<%=rs[0].tid %>">  
            <input type="hidden" name="status" value="1"/>
            <input type="submit" value="通过" class="exam-purple">
        </form> 
        <%}else if(rs[0].status==1){%>
        <!-- pass page -->
        <form method="post" action="/administrator/examine/pass/result?tid=<%=rs[0].tid %>">
            <input type="hidden" name="status" value="3"/>
            <input type="submit" value="删除" class="exam-gray">
        </form>
        <form method="post" action="/administrator/examine/pass/result?tid=<%=rs[0].tid %>">
            <input type="hidden" name="status" value="-1"/>
            <input type="submit" value="下架" class="exam-green">
        </form>
        <%}%>
	</table>

</div>
<script src="/javascripts/no.js"></script>
<script src="http://lib.sinaapp.com/js/jquery/3.1.0/jquery-3.1.0.slim.min.js"></script>
</body>

</html>