 <!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8"/>
	<title>首页</title>
	<link rel="stylesheet" type="text/css" href="/stylesheets/nav.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/home.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/collection.css">
</head>

<body style="margin: 0;padding: 0;background-color: #F2F2F2">
<% if(loginbean==undefined){ %> 
<div class="top1">
	<div style="width: 1000px;height: 70px;margin: 0 auto;">
		<img src="../images/logo_S.gif" style="
		width: 195px;
		height: 50px;
		padding-top: 10px;
		padding-left: 30px">

		<div class="inside" style="margin-right: 20px;border:none;color: #434343">
			<a href="./users/login" style="color: #434343">登录</a> / 
			<a href="./users/register" style="color: #434343">注册</a>
		</div>

		<div class="inside">
			<a href="/employment/emy">我要发帖</a>
		</div>

		<div class="inside">
			<a href="#">我的收藏</a>
		</div>
	</div>
</div>
<% }else{ %> 
	<div class="top1">
        <div style="width: 1000px;height: 70px;margin: 0 auto;">
            <img src="/images/logo_S.gif" style="
            width: 195px;
            height: 50px;
            padding-top: 10px;
            padding-left: 30px">
    
            <div class="inside2" style="margin-right: 20px;border:none;color: #434343">
                <a  href="#" onClick="javascript:location.href='/logout'">退出</a>
            </div>
    
            <div class="inside2"><a href="/employment/emy">我要发帖</a></div>
            <div class="inside2"><a href="/employment/eplist">我发的贴</a></div>
            <div class="inside2"><a href="/employment/collection/list">我的收藏</a></div>
            <div class="inside2"><a href="#" style="color: #6c2393;font-weight: 500"><%=loginbean.nicheng%></a></div>
        </div>
    </div>
<% } %> 


<div class="top2">
	<div style="width: 1000px;height: 24px;margin: 0 auto;">
		<ul>
			<li style="padding-left: 176px"><a href="#">首页</a></li>
			<li><a href="#">IT互联网</a></li>
			<li><a href="#">金融</a></li>
			<li><a href="#">广告</a></li>
			<li><a href="#">房地产</a></li>
			<li><a href="#">消费品</a></li>
			<li><a href="#">制造业</a></li>
			<li><a href="#">其他</a></li>
			<li style="float: right;margin-right: 20px"><a href="#">帮助</a></li>
		</ul>
	</div>
</div>

<div style="background-color: #fff;width: 1000px;height: 620px;margin: 0 auto;">

	<table style="padding-left: 50px;padding-top: 8px;">
			<tr>
				<td class="title-theme">主题</td>
				<td class="title-type">活动类型</td>
				<td class="title-time">时间</td>
				<td class="title-place">地点</td>
				<td class="title-collect" style="color: #AEAEAE">分色收藏</td>
			</tr>
	</table>

	<% rs.forEach(function(row){ %>
	<table style="padding-left: 50px;">
			<tr>
				<td class="text-theme">
					<a class="home-title" href="/employment/detail?tid=<%= row['tid'] %>"><%= row['title'] %></a>
				</td>
				<td class="text-type">宣讲/招聘</td>
				<td class="text-time">2018/03/07 19:00</td>
				<td class="text-place">深圳大学科技楼1号报告厅</td>
				<% if(loginbean!=undefined){ %>
				<td class="text-collect">
					<ul>
						<a href="/employment/collection?uid=<%= loginbean.id %>&tid=<%= row['tid'] %>&rank=3&page=<%=page %>&title=<%= row['title'] %>"><li><div class="colec"></div></li></a>
						<a href="/employment/collection?uid=<%= loginbean.id %>&tid=<%= row['tid'] %>&rank=2&page=<%=page %>&title=<%= row['title'] %>"><li><div class="colec"></div></li></a>
						<a href="/employment/collection?uid=<%= loginbean.id %>&tid=<%= row['tid'] %>&rank=1&page=<%=page %>&title=<%= row['title'] %>"><li><div class="colec"></div></li></a>
					</ul>
				</td>
				<% } %>
			</tr>
	</table>
	<hr class="hr1">
	<% }) %>
	<table style="padding-left: 50px;" align="center">
		<tr>
			<td align="center">
			  总共<%=count%>记录
			  第<%=page%>/<%=countPage%>页，
			  
			</td>
			<td>
			  <% if (page!=1) { %>
				<a href="/?page=1">首页</a>&nbsp
				<a href="/?page=<%=(page-1)%>">上一页</a>&nbsp
			  <% } 
			  if (page!=countPage) { %>
			  <a href="/?page=<%=(page+1)%>">下一页</a>&nbsp
			  <a href="/?page=<%=countPage%>">尾页</a>&nbsp
			  <% } %>
			</td>
		</tr>
	</table>
	<hr class="hr1">
	 
</div>

</body>

</html>